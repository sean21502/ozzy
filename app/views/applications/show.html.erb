<h1><%= @applications.name %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @applications.url %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_application_path(@applications), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @applications, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?'} %>
  </div>
</div>

<h3>events</h3>   
<% @events.each do |event, count| %>     
	<%= "#{event}: #{count.length}" %><br />   
	<% end %>