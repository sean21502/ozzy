<h1>Applications#show</h1>
<p>Find me in app/views/applications/show.html.erb</p>
<h1><%= @wapplication.name %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@application.url) %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_application_path(@application), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @application, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?'} %>
  </div>
</div>